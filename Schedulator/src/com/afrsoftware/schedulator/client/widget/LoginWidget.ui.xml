<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.afrsoftware.schedulator.resources.Resources"></ui:with>
	<ui:style>
	</ui:style>
	<g:HTMLPanel height="auto" styleName="form-signin">
		<h1 class="form-signin-heading">Schedulator</h1>
		<p>Bienvenue sur le site de <b>Schedulator</b> connectez-vous ou creez un compte.</p> 		
		<g:Label text="Nom d'utilisateur :" height="auto"/>
		<g:TextBox ui:field="Username" height="auto"/>
		<g:Label text="Mot de passe :" height="auto" />
		<g:PasswordTextBox ui:field="Password" height="auto" />
		<g:Button ui:field="signIn" styleName="btn btn-primary" height="auto">Se connecter</g:Button>
		<g:Button ui:field="createAccount" styleName="btn btn-inverse" height="auto">Créer un compte</g:Button>
		<g:Button ui:field="lostPassword" styleName="btn btn-link" height="auto">Mot de passe oublié?</g:Button>
	</g:HTMLPanel>
</ui:UiBinder>